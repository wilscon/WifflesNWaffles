@{
}
<link rel="stylesheet" href="~/css/History.css" asp-append-version="true" />

<div class="grid-x" style="margin-bottom: 10px;">
    <div class="cell small-offset-1 small-10 medium-offset-3 medium-6 large-offset-3 large-6" style="color: white; display: flex; justify-content: center; align-items: center;  font-family: monospace; font-size: 25px;">
        2022
    </div>

</div>

<div class="grid-x" style="margin-top:20px; margin-bottom: 20px;">
    <div class="cell small-offset-1 small-10 medium-offset-3 medium-6 large-offset-3 large-6" style="display: flex; justify-content: center; align-items: center;">

        <img class="historyImage" id="historyImage" style="display:none;" src="~/images/2022/2022.jpg" />
        <div id="spinner" class="spinner"></div>
    </div>
</div>
<div class="grid-x" style="margin-bottom: 10px;">
    <div class="cell small-offset-1 small-10 medium-offset-3 medium-6 large-offset-3 large-6" style="color: white; display: flex; justify-content: center; align-items: center;  font-family: monospace; font-size: 25px;">
       2023
    </div>

</div>

<div class="grid-x" style="margin-top: 20px; margin-bottom: 20px;">
    <div class="cell small-offset-1 small-10 medium-offset-3 medium-6 large-offset-3 large-6" style="  text-align:center; color: white;">
        Cancelled  
       
    </div>
</div>
<div class="grid-x" style="margin-bottom: 10px;">
    <div class="cell small-offset-1 small-10 medium-offset-3 medium-6 large-offset-3 large-6" style="color: white; display: flex; justify-content: center; align-items: center;  font-family: monospace; font-size: 25px;">
        2024
    </div>

</div>
<div class="grid-x" style="margin-top: 20px; margin-bottom: 20px;">
    <div class="cell small-offset-1 small-10 medium-offset-3 medium-6 large-offset-3 large-6" style="display: flex;justify-content: space-around">

        <img class="historyImage" src="~/images/2024/waffle.jpg" />
        <img class="historyImage" src="~/images/2024/game.jpg" /> 

        
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var img = document.getElementById("historyImage");
            var spinner = document.getElementById("spinner");

            img.onload = function () {
                spinner.style.display = "none";
                img.style.display = "block";
            };

            img.onerror = function () {
                spinner.innerHTML = "Error loading image!";
            };

            img.src = img.src;
        });
    </script>
}

