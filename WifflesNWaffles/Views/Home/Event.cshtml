@model EventResourceViewModel;


<link rel="stylesheet" href="~/css/Event.css" asp-append-version="true" />
<script src="https://maps.googleapis.com/maps/api/js?key=@ViewData["ApiKey"]"></script>
<div class="grid-x" id="RSVPButton" style="height: 60px; margin-top: 20px; margin-bottom: 10px;">
    <div class="cell small-offset-1 small-10 medium-offset-5 medium-2 large-offset-5 large-2" data-selector="RSVP" style="background-color:#ff4d4d; display: flex; justify-content: center; align-items: center;  font-family: monospace; font-size: 25px; cursor: pointer">
        RSVP
    </div>

</div>


<div class="grid-x" style="">
    <div class="eventTitle cell small-offset-1 small-2 medium-offset-3 medium-1 large-offset-3 large-1" style="">
        What:
    </div>
    <div class="eventInfo cell small-8 medium-6 large-6" style="padding: 5px;">
        @Model.Description
    </div>
</div>
<div class="grid-x" style="margin-top: 5px;">
    <div class="eventTitle cell small-offset-1 small-2 medium-offset-3 medium-1 large-offset-3 large-1" style="">
        When: 
    </div>
    <div class="eventInfo cell small-8 medium-6 large-6" style="padding: 5px;">
        @Model.Date
        
    </div>
    
</div>
<div class="grid-x" style="margin-top: 5px;">
    <div class="eventTitle cell small-offset-1 small-2 medium-offset-3 medium-1 large-offset-3 large-1" style="">
        Where:
    </div>
    <div class="eventInfo cell small-8 medium-6 large-6" style="padding:5px;">
        @Model.Address
    </div>
</div>

<div class="grid-x" style="">
    <div class="cell small-offset-1 small-10 medium-offset-3 medium-7 large-offset-3 large-7" id="map"></div>
</div>

<script src="~/js/Event/event.js"></script>
